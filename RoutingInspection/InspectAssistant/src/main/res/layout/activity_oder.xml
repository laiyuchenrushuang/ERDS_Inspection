<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/common_title"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_margin="12dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="姓名"
                    style="@style/common_text"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="空"
                    style="@style/common_text"/>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_margin="12dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="预约业务"
                    style="@style/common_text"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/yw"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="空"
                    style="@style/common_text"/>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_margin="12dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="查验机构"
                    style="@style/common_text"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/jg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="空"
                    style="@style/common_text"/>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_margin="12dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="日期"
                    style="@style/common_text"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="空"
                    style="@style/common_text"/>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_margin="12dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="预约编号"
                    style="@style/common_text"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/bh"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxWidth="150dp"
                    android:textIsSelectable="true"
                    android:text="空"
                    style="@style/common_text"/>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line"/>

    <TextView
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="40sp"
            android:gravity="center"
            android:text="已到场"/>
</LinearLayout>