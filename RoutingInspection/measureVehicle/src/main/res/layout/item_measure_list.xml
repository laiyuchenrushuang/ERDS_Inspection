<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:descendantFocusability="afterDescendants"
    android:layout_height="wrap_content">
    <TextView android:id="@+id/item_tv_name"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:text="@string/measure_tv_null"
        android:textSize="14sp"
        android:textColor="@color/blacktext"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/item_tv_mac"
        android:layout_width="wrap_content"
        android:text="@string/measure_tv_null"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/appTextGray"
        android:layout_below="@id/item_tv_name"
        android:layout_height="wrap_content" />
    <Button android:text="@string/measure_item_btn"
        style="@style/measure_btn"
        android:id="@+id/item_btn_conn"
        android:layout_alignParentRight="true"/>
</RelativeLayout>